[color]
   ui = auto
 [color "branch"]
   current = yellow reverse
   local = yellow
   remote = green
 [color "diff"]
   meta = yellow bold
   frag = magenta bold
   old = red bold
   new = green bold
 [color "status"]
   added = yellow
   changed = green
   untracked = cyan

[alias]
   st = status
   ci = commit -a
   br = branch
   pl = pull origin master 
   ps = push origin master
   co = checkout
   df = diff
   lg = log -p
   mt = mergetool
   a = add .
[merge]
    tool = meld
